@model TesteProdutoStore.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h4>Editar Produto</h4>
<hr />
<form asp-action="Edit">
    <div class="form-group">
        <label>Nome</label>
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>Descrição</label>
        @Html.TextBoxFor(a => a.Descricao, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
        </label>
    </div>

    <div class="row align-items-center">
        <div class="col-6">
            <label class="control-label">Categoria De Produto</label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categoria"></select>
        </div>

        <div class="col-4">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Perecivel" /> Perecível ?
                </label>
            </div>
        </div>

    </div>
    <input type="hidden" asp-for="Id" />
    <div class="col">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
    </div>
</form>
